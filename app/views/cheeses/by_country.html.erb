<%= link_to cheeses_path, class: "back-arrow" do %>
  <%= icon('fa-solid', 'arrow-left') %>
<% end %>

<h1 class="h1country">Cheeses from <%= params[:country] %></h1>

<div class="results-container">
  <% if @cheeses.any? %>
    <% @cheeses.each do |cheese| %>
      <%= link_to cheese_path(id: cheese.id), class: "cheese-card-result" do %>
        <div class="result-card">
          <%= image_tag cheese.image_url, alt: cheese.name %>
          <div>
            <h4><%= cheese.name %></h4>
            <p><%= cheese.country %>, <%= cheese.region %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p>No cheeses from <%= params[:country] %> found. </p>
  <% end %>
</div>
