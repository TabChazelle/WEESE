<h2 class="favorite-heading">Favorite Wines</h2>
<% @favorite_wines.each do |favorite| %>
  <p class="favorite-item"><%= favorite.favoritable.name %></p>
<% end %>

<h2 class="favorite-heading">Favorite Cheeses</h2>
<% @favorite_cheeses.each do |favorite| %>
  <p class="favorite-item"><%= favorite.favoritable.name %></p>
<% end %>

<h2 class="favorite-heading">Favorite Pairings</h2>
<% @favorite_pairings.each do |favorite| %>
  <% pairing = favorite.favoritable %>
  <% wine = Wine.find_by(id: pairing.wines_id) %>
  <% cheese = Cheese.find_by(id: pairing.cheeses_id) %>
  <p class="favorite-item">Wine: <%= wine.name if wine %>, Cheese: <%= cheese.name if cheese %></p>
<% end %>
