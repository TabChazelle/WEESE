
<h1> Leave a Review </h1>

<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for([@pairing, @review], data: { controller: "submit" }) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your Pairing", input_html: {data: { controller: "star-rating", action: "click->form-submit#submit"} }  %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>

  <%= link_to " All Pairings", pairings_path %>

</div>
