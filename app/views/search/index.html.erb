<div class="container mt-4">
  <% if @wines.exists? || @cheeses.exists? %>
    <h2>Search Results for "<%= params[:query] %>":</h2>

    <% if @wines.exists? %>
      <div class="wines-results">
        <h3>Wines</h3>
        <% @wines.each do |wine| %>
          <div class="wine-card">
            <%= image_tag wine.image_url, alt: wine.name, class: 'wine-image' if wine.image_url.present? %>
            <h4><%= wine.name %></h4>
            <p><%= wine.family %></p>
            <p><%= wine.country %>, <%= wine.region %></p>
            <p><%= truncate(wine.description, length: 150) %></p>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if @cheeses.exists? %>
      <div class="cheeses-results">
        <h3>Cheeses</h3>
        <% @cheeses.each do |cheese| %>
          <div class="cheese-card">
            <%= image_tag cheese.image_url, alt: cheese.name, class: 'cheese-image' if cheese.image_url.present? %>
            <h4><%= cheese.name %></h4>
            <p><%= cheese.milk %> milk</p>
            <p><%= cheese.country %>, <%= cheese.region %></p>
            <p><%= truncate(cheese.description, length: 150) %></p>
          </div>
        <% end %>
      </div>
    <% end %>

  <% else %>
    <h3>No results found for "<%= params[:query] %>"</h3>
  <% end %>
</div>
