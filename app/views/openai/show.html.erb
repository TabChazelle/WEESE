<h1>AI Test</h1>

<%= form_with url: openai_index_path, method: 'post', data: { turbo_frame: 'openai_frame' } do %>
  <label for="prompt">Enter your prompt:</label>
  <input type="text" id="prompt" name="prompt" required>
  <button type="submit">Generate</button>
<% end %>

<turbo-frame id="openai_frame">
  <p id="generated-text"><%= @openai %></p>
</turbo-frame>
