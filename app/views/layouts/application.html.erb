  <meta property="og:title" content="Weese - Your Personal Sommelier">
  <meta property="og:description" content="Wine & Cheese Pairing Application">
  <meta property="og:image" content="https://i.imgur.com/GDt5d9O.png">
  <meta property="og:url" content="<%= request.original_url %>">
  <meta property="og:type" content="website">

</head>
<body>

<% unless current_page?(root_path) || current_page?(home_path) %>
  <%= render "shared/navbar" %>
<% end %>

<div class="content-container">
  <%= yield %>
</div>

<% unless current_page?(root_path) || current_page?(home_path) %>
  <%# <%= render "shared/footer" %>
  <%= render "shared/bottom_navbar" %>
<% end %>

</body>
</html>
