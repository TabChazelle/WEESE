<% if user_signed_in? %>
  <div class="favorite-icon">
    <%= link_to(
      toggle_favorite_wine_path(@wine),
      remote: true,
      data: { turbo_method: :post }
    ) do %>
      <i class="fas fa-heart <%= @wine.favorited_by?(current_user) ? 'favorite' : '' %>"></i>
    <% end %>
  </div>
<% else %>
  <p>Please <%= link_to 'sign in', new_user_session_path %> to add wines to your favorites.</p>
<% end %>
